#!/data/data/com.termux/file/usr/bin/bash
if [[ ! $(command -v lolcat) ]] &>/dev/null 
then
  if [[ ! $(command -v ruby) ]] &>/dev/null 
  then
    apt install ruby -y
  fi
  gem install lolcat
fi

if [[ ! $(command -v curl) ]] &>/dev/null 
then
  apt install curl -y
fi
bash <(curl -fsSL "https://raw.githubusercontent.com/ivam3/termux-packages/gh-pages/packages/i-Haklab/home/.local/libexec/IbyC-fixer") ${@:1}

