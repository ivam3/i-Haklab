#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
trap ctrl_c INT
source "${HOME}/.local/etc/i-Haklab/variables"
source "$iHETC/functions"
localdb="$iHETC/Tools/Readme"

[[ ! -z "$1"  ]] && {
    if [[ ! -e $localdb/$1.md  ]]; then
        curl -sSLf "$iHDB/.local/etc/Tools/Readme/$1.md" -o $localdb/$1.md 2>$LOGFILE || {
            STDERR; exit 1;
        }
    fi
    bat $localdb/$1.md
}
