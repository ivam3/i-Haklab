#!/data/data/com.termux/files/usr/bin/bash
# This file contain all i-Haklab enviroment variables
OP1=${2:-crunch}

export version='v.3.10'
export iHETC='/data/data/com.termux/files/home/.local/etc/i-Haklab'
export iHLIBEXEC='/data/data/com.termux/files/home/.local/libexec/i-Haklab'
export iHDB='https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home'
export SDCARD=$(df|grep fuse|grep storage|grep -iv emulated|awk -F " " '{print $NF}')
export PKGDB='https://raw.githubusercontent.com/ivam3/termux-packages/gh-pages/packages'
export JAVADB='https://raw.githubusercontent.com/ivam3/java/master'
export USER=$(grep -n 'set USER' '/data/data/com.termux/files/home/.local/etc/fish/config.fish'|awk -F " " '{print $3}')
[[ -e $PREFIX/var/log/i-Haklab.log ]] || touch /data/data/com.termux/files/usr/var/log/i-Haklab.log
export LOGFILE='/data/data/com.termux/files/usr/var/log/i-Haklab.log'
export TOOLS='/data/data/com.termux/files/home/.local/share'
export ARCH=$(dpkg --print-architecture)
export LOCALHOST=$(ifconfig 2>&1|grep -oE '([0-9]{1,3}\.){3}[0-9]{1,3}'|grep -v 255|tail -n 1)
export LOOPBACK='127.0.0.1'
export LPORT='3030'
export RPORT='80'
export MSFPATH='/data/data/com.termux/files/usr/opt/metasploit-framework'
export APIKEY_phonescan=""
export APIKEY_chatGPT=""
export APIKEY_neovim=""
export WL='/data/data/com.termux/files/home/.local/share/wordlist'
export R='\e[31m'
export G='\e[32m'
export Goke='\033[92m'
export Glig=='\e[1;32m'
export Y='\e[33m'
export B='\e[34m'
export M='\e[35m'
export C='\e[36m'
export W='\e[0m'
export bold='\e[1m'
export underline='\e[4m'
export dim='\e[2m'
export strickthrough='\e[9m'
export blink='\e[5m'
export reverse='\e[7m'
export hidden='\e[8m'
export black='\e[30m'
export gray='\e[37m'
export darkgray='\e[90m'
export lightred='\e[91m'
export lightgreen='\e[92m'
export lightyellow='\e[93m'
export lightblue='\e[94m'
export lightpurple='\e[95m'
export lightaqua='\e[96m'
export white='\e[97m'
export default='\e[39m'
export BLACK='\e[40m'
export RED='\e[41m'
export GREEN='\e[42m'
export ORANGE='\e[43m'
export BLUE='\e[44m'
export PURPLE='\e[45m'
export AQUA='\e[46m'
export GRAY='\e[47m'
