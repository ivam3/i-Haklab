export LIGHTYELLOW='\e[103m'
export LIGHTBLUE='\e[104m'
export LIGHTPURPLE='\e[105m'
export LIGHTAQUA='\e[106m'
export WHITE='\e[107m'
export DEFAULT='\e[49m'
