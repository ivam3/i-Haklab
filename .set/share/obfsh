    _sign[217]="£"
    _sign[218]="*"
    _sign[219]="$"
    _sign[220]="+"
    _sign[221]="-"
    _sign[222]="~"
    _sign[223]=":"
    _sign[224]=";"
    _sign[225]="_"
    _sign[226]="="
    _sign[227]="¾"
    _sign[228]="½"
    _sign[229]="§"
    _sign[230]=","
    _sign[231]="."
    _sign[232]="¤"
    _sign[233]="%"
    _sign[234]="&"
    _sign[235]="]"
    _sign[236]="-"
    _sign[237]="("
    _sign[238]=")"
    _sign[239]="["
    _sign[240]="{"
    _sign[241]="}"
    _sign[242]="+"
    _sign[243]="?"
    _sign[244]="£"
    _sign[245]="*"
    _sign[246]="$"
    _sign[247]="?"
    _sign[248]="£"
    _sign[249]="!"
    _sign[250]="&"
    _sign[251]="?"
    _sign[252]="="
    _sign[253]="%"
    _sign[254]="."
    _sign[255]=":"
    _sign[256]=";"
    _sign[257]="¤"
    _sign[258]=" "
    _sign[259]=" "
