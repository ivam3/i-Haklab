    _sign[171]=9
    _sign[172]=0
    _sign[173]=1
    _sign[174]=2
    _sign[175]=3
    _sign[176]=4
    _sign[177]=5
    _sign[178]=6
    _sign[179]=7
    _sign[180]=8
    _sign[181]=9
    _sign[182]=0
    _sign[183]=1
    _sign[184]=2
    _sign[185]=3
    _sign[186]=4
    _sign[187]=5
    _sign[188]=6
    _sign[189]=7
    _sign[190]=8
    _sign[191]=9
    _sign[192]=0
    _sign[193]=1
    _sign[194]=2
    _sign[195]=3
    _sign[196]=4
    _sign[197]=5
    _sign[198]=6
    _sign[199]=7
    _sign[200]=8
    _sign[201]=9
    _sign[202]=0
    _sign[203]=1
    _sign[204]=2
    _sign[205]="¤"
    _sign[206]="%"
    _sign[207]="&"
    _sign[208]="]"
    _sign[209]="/"
    _sign[210]="("
